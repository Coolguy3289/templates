{
  "pufferd": {
    "type": "doom",
    "display": "Zandronum",
    "install": {
      "commands": [
        {
          "type": "download",
          "files": [
            "https://zandronum.com/downloads/zandronum${version}-linux-${arch}.tar.bz2",
            "http://distro.ibiblio.org/pub/linux/distributions/slitaz/sources/packages/d/doom1.wad"
          ]
        },
        {
          "commands": [
            "tar xvjf *.tar.bz2"
          ],
          "type": "command"
        },
        {
          "type": "writefile",
          "text": "",
          "target": "whitelist.txt"
        },
        {
          "type": "writefile",
          "text": "",
          "target": "banlist.txt"
        },
        {
          "type": "writefile",
          "text": "",
          "target": "adminlist.txt"
        }
      ]
    },
    "run": {
      "stop": "Quit",
      "pre": [],
      "post": [],
      "arguments": [
        "-host ${players}"
      ],
      "program": "./zandronum-server"
    },
    "environment": {
      "type": "standard"
    },
    "data": {
      "version": {
        "value": "2.1.2",
        "required": true,
        "desc": "Which version of Zandronum you want to download.",
        "display": "Version",
        "internal": false
      },
      "arch": {
        "value": "x86_64",
        "required": true,
        "desc": "Which architecture of Zandronum you want to download",
        "display": "Architecture",
        "internal": false
      }
    }
  }
}